{% extends "AdminBundle::layout.html.twig" %}
{% block title %} Utilisateurs {% endblock %}
{% block style %}
    <link rel="stylesheet" href="{{ asset("bundles/admin/assets/skins/dropify/css/dropify.css")}}"/>
{% endblock %}
{% block body %}
    <div class="md-card uk-margin-medium-bottom">
        <div class="md-card-toolbar">
            <div class="md-card-toolbar-actions">
                <i class="md-icon material-icons md-card-fullscreen-activate">&#xE5D0;</i>
                <i class="md-icon material-icons md-card-toggle">&#xE316;</i>
                <a href="{{ path('admin_homepage') }}"><i class="md-icon uk-icon-refresh"></i></a>
            </div>
            <h3 class="md-card-toolbar-heading-text">
                Utilisateurs
                <span class="uk-badge uk-badge-warning">{{ users | length }}</span>
            </h3>
        </div>
        <div class="md-card-content">
            <div class="">
                <div class="uk-grid" data-uk-grid-margin="">
                    <div class="uk-width-medium-1-1">
                        <table class="uk-table uk-table-nowrap table_check">
                            <thead>
                                <tr>
                                    <th>Username</th>
                                    <th>Nom</th>
                                    <th>Prenom</th>
                                    <th>Fonction</th>
                                    <th>Sexe</th>
                                    <th>Date d'ajout</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for user in users %}
                                <tr {% if  user.bloque %}style="background: #7F007F; color: #fff;" {% endif %}>
                                    <td>{{ user.username }}</td>
                                    <td>{{ user.nom }}</td>
                                    <td>{{ user.prenom }}</td>
                                    <td>{{ user.fonction }}</td>
                                    <td>{{ user.sexe }}</td>
                                    <td>{{ user.createdat | date('d M Y')}}</td>
                                    <td>
                                        <a class='editUser' data-uk-tooltip="{pos:'top'}" title="Modifier le produit" data-url="{{ path('admin_modify_user', {id: user.id}) }}"
                                           data-username="{{ user.username }}" data-nom="{{ user.nom }}" data-prenom="{{ user.prenom }}" data-fonction="{{ user.fonction }}"
                                           data-sexe="{{ user.sexe }}"><i class='uk-icon-edit uk-icon-medium'></i></a>
                                        <a class='deleteUser' data-url="{{ path('admin_delete_user', {id: user.id}) }}" data-nom="{{ user.nom }}"><i class='uk-icon-trash uk-icon-medium uk-text-danger'></i></a>
                                        {% if user.bloque %}
                                            <a class='blockUser' title="Débloquer" data-type="unblock" data-url="{{ path('admin_unblock_user', {id: user.id}) }}" data-nom="{{ user.nom }}"><i class='uk-icon-unlock uk-icon-medium uk-text-danger'></i></a>
                                        {% else %}
                                            <a class='blockUser' title="Bloquer" data-type="block" data-url="{{ path('admin_block_user', {id: user.id}) }}" data-nom="{{ user.nom }}"><i class='uk-icon-lock uk-icon-medium uk-text-danger'></i></a>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% else %}
                                <tr><td colspan="7" class="uk-text-danger uk-text-center">Aucun utilisateur</td></tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="md-fab-wrapper">
        <a class="md-fab md-fab-accent md-fab-wave" id="addUser" href="#" data-uk-modal="{center:true}">
            <i class="material-icons"></i>
        </a>
    </div>

    <div class="uk-modal" id="modalUser">
        <div class="uk-modal-dialog" style="width: 50%;">
            <button class="uk-modal-close uk-close" type="button"></button>
            <form action="" id="formUser" method="post">
                <div class="uk-modal-header">
                    <h3 class="heading_b uk-margin-bottom titleForm">Ajoutez un nouvel utilisateur</h3>
                    <div class="text-center" id="messageform"></div>
                </div>
                <div class="uk-grid" data-uk-grid-margin>
                    <div class="uk-width-medium-1-1">
                        <div class="parsley-row">
                            <input placeholder="Nom" type="text" name="nom" id="nom" required class="md-input">
                        </div>
                    </div>
                </div>
                <div class="uk-grid" data-uk-grid-margin>
                    <div class="uk-width-medium-1-1">
                        <div class="parsley-row">
                            <input placeholder="Prénom" type="text" name="prenom" id="prenom" class="md-input">
                        </div>
                    </div>
                </div>
                <div class="uk-grid" data-uk-grid-margin>
                    <div class="uk-width-medium-1-1">
                        <div class="parsley-row">
                            <input type="text" placeholder="Nom d'utilisateur" name="username" id="username" required class="md-input">
                        </div>
                    </div>
                </div>
                <div class="uk-grid" data-uk-grid-margin>
                    <div class="uk-width-medium-1-1">
                        <div class="parsley-row">
                            <h4>Mot de passe</h4>
                            <input type="password" name="mdp" id="mdp" class="md-input">
                        </div>
                    </div>
                </div>
                <div class="uk-grid" data-uk-grid-margin>
                    <div class="uk-width-medium-1-1">
                        <div class="parsley-row">
                            <h4>Sexe</h4>
                            H<input type="radio" name="sexe" value="Homme" id="homme">
                            F<input type="radio" name="sexe" value="Femme" id="femme">
                        </div>
                    </div>
                </div>
                <div class="uk-grid" data-uk-grid-margin>
                    <div class="uk-width-medium-1-1">
                        <div class="parsley-row">
                            <h4>Fonction</h4>
                            <select name="fonction" id="fonction" class="md-input">
                                <option value="DG_TYPE">DG</option>
                                <option value="CHEF_TYPE">Chef d'agence</option>
                                <option value="SECRETAIRE_TYPE">Sécrétaire</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="uk-modal-footer">
                    <a href="#" class="md-icon-btn"><i class="md-icon uk-icon-save"></i></a>
                    <button type="submit" class="sendBtn uk-float-right md-btn md-btn-flat md-btn-flat-primary">Ajouter</button>
                </div>
            </form>
        </div>
    </div>

{% endblock %}
{% block scripts %}
    <script src="{{ asset("bundles/admin/assets/js/custom/dropify/dist/js/dropify.min.js") }}"></script>
    <script src="{{ asset("bundles/admin/assets/js/pages/forms_file_input.min.js") }}"></script>
    <script src="{{ asset("bundles/admin/bower_components/ckeditor/ckeditor.js") }}"></script>
    <script src="{{ asset("bundles/admin/bower_components/ckeditor/adapters/jquery.js") }}"></script>
    <script src="{{ asset("bundles/admin/assets/js/users.js") }}"></script>
{% endblock %}