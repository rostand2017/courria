{% extends "AdminBundle::layout.html.twig" %}
{% block title %} Réservations {% endblock %}
{% block style %}
    <link rel="stylesheet" href="{{ asset("bundles/admin/assets/skins/dropify/css/dropify.css")}}"/>
{% endblock %}
{% block body %}
    <div class="md-card uk-margin-medium-bottom">
        <div class="md-card-toolbar">
            <div class="md-card-toolbar-actions">
                <i class="md-icon material-icons md-card-fullscreen-activate">&#xE5D0;</i>
                <i class="md-icon material-icons md-card-toggle">&#xE316;</i>
                <a href="{{ path('admin_reservation', {concert: concert.id}) }}"><i class="md-icon uk-icon-refresh"></i></a>
            </div>
            <h3 class="md-card-toolbar-heading-text">
                <a href="{{ path('admin_homepage') }}"><i class="md-icon uk-icon-arrow-left"></i></a>
                Réservations du concert <span class="uk-text-primary">{{ concert.intitule }}</span>
                <span class="uk-badge uk-badge-warning">{{ nbReservation }}</span>
            </h3>
        </div>
        <div class="md-card-content">
            <div>
                <form action="{{ path('admin_reservation', {concert: concert.id}) }}" class="contactFilter">
                    <div class="uk-grid" style="margin-top: 10px">
                        <div class="uk-width-medium-1-2">
                            <div class="">
                                <label for="uk_dp_start">Chercher par date d'ajout min</label>
                                <input type="text" class="md-input" name="begin" {{ app.request.query.get("begin") }} id="uk_dp_start" />
                            </div>
                        </div>
                        <div class="uk-width-medium-1-2">
                            <div class="">
                                <label for="uk_dp_end">Chercher par date d'ajout max</label>
                                <input type="text" class="md-input" name="end" value="{{ app.request.query.get("end") }}" id="uk_dp_end" />
                            </div>
                        </div>
                    </div>
                    <div class="uk-grid" style="margin-top: 10px">
                        <div class="uk-width-medium-1-1">
                            <div class="">
                                <label for="mail_new_to">Recherche par le nom ou prenom</label>
                                <input type="text" class="md-input" name="search" value="{{ app.request.query.get("search") }}" />
                            </div>
                        </div>
                    </div>
                    <div class="uk-grid" data-uk-grid-margin="">
                        <div class="uk-width-medium-1-2 uk-row-first">
                        </div>
                        <div class="uk-width-medium-1-2">
                            <button type="submit" class="uk-float-right md-btn md-btn-flat md-btn-flat-primary">Chercher</button>
                        </div>
                    </div>
                </form>
                <div class="uk-grid" data-uk-grid-margin="">
                    <div class="uk-width-medium-1-1">
                        <table class="uk-table uk-table-nowrap table_check">
                            <thead>
                            <tr>
                                <th></th>
                                <th>Nom</th>
                                <th>age</th>
                                <th>email</th>
                                <th>Date de reservation</th>
                                <th>Réservation</th>
                                <th></th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for client in clients %}
                                <tr>
                                    <td><img src="uploads/thumbnails/{{ client.photo }}" alt=""></td>
                                    <td>{{ client.nom }} {{ client.prenom }}</td>
                                    <td>{% if client.age is not null %} {{ client.age }} ans{% else %}- - -{% endif %}</td>
                                    <td>{% if client.email is not null %} {{ client.email }} ans{% else %}- - -{% endif %}</td>
                                    <td>{{ client.date | date('d-m-y')}}</td>
                                    <td><a href="{{ path('admin_client_reservation', {client: client.cli_id}) }}"><i class='uk-icon-eye uk-icon-medium'></i></a></td>
                                    <td><a class='deleteReservation' data-uk-tooltip="{pos:'top'}" title='Annuler la reservation' data-url="{{ path('admin_client_delete') }}" data-id="{{ client.id }}" data-nom="{{ client.nom }}"><i class='uk-icon-trash uk-icon-medium uk-text-danger'></i></a></td>
                                    <td> <a data-uk-tooltip="{pos:'top'}" title='Modifier la reservation' class='editReservation' data-id="{{ client.id }}" data-nom="{{ client.nom }}" data-prenom="{{ client.prenom }}" data-nbplace="{{ client.nbplace }}" data-concert="{{ client.con_id }}"><i class="uk-icon-edit uk-icon-medium uk-text-warning"></i></a></td>
                                </tr>
                            {% else %}
                                <tr><td colspan="8" class="uk-text-danger uk-text-center">Aucune réservation</td></tr>
                            {% endfor %}
                            </tbody>
                        </table>

                        <tfoot class="uk-width-medium-1-1">
                        <tr>
                            {% if nbPage > 1 %}
                                <td colspan="8">
                                    <ul class="uk-pagination uk-margin-medium-top">
                                        <li class="{% if page <= 1 %}disabled{% endif %}">
                                            <a href="{% if page > 1 %}{{ path("admin_reservation", {concert: concert.id}) }}?page={{ page-1 }}&begin={{ app.request.query.get("begin") }}&end={{ app.request.query.get("end") }}&search={{ app.request.query.get("search") }}
                                            {% else %}#{% endif %}" class="uk-icon-angle-double-left"></a>
                                        </li>
                                        {% for nb in range(1, nbPage) %}
                                            <li class="{% if page == nb %}active{% endif %}">
                                                <a href="{% if page != nb %} {{ path("admin_reservation", {concert: concert.id}) }}?page={{ nb }}&begin={{ app.request.query.get("begin") }}&end={{ app.request.query.get("end")}}&search={{ app.request.query.get("search") }}
                                                 {% endif %}">
                                                    {{ nb }}
                                                </a>
                                            </li>
                                        {% endfor %}
                                        <li class="{% if page >= nbPage %}disabled{% endif %}">
                                            <a href="{% if page < nbPage  %}{{ path("admin_reservation", {concert: concert.id}) }}?page={{ page+1 }}&begin={{ app.request.query.get("begin") }}&end={{ app.request.query.get("end") }}&search={{ app.request.query.get("search") }}{% else %}#{% endif %}" class="uk-icon-angle-double-right"></a>
                                        </li>
                                    </ul>
                                </td>
                            {% endif %}
                        </tr>
                        </tfoot>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="md-fab-wrapper">
        <a class="md-fab md-fab-accent md-fab-wave" id="addReservation" href="#" data-uk-modal="{center:true}">
            <i class="material-icons"></i>
        </a>
    </div>

    <div class="uk-modal" id="modalReservation">
        <div class="uk-modal-dialog" style="width: 75%;">
            <button class="uk-modal-close uk-close" type="button"></button>
            <form action="{{ path('admin_reservation_edit') }}" id="formReservation" method="post">
                <div class="uk-modal-header">
                    <h3 class="heading_b uk-margin-bottom titleForm">Ajoutez une réservation</h3>
                    <div class="text-center" id="messageformSalle"></div>
                </div>
                <div class="uk-grid" data-uk-grid-margin>
                    <input type="hidden" id="id" name="id">
                    <input type="hidden" name="action" id="action">
                    <div class="uk-width-medium-1-1">
                        <div class="parsley-row">
                            <label for="nom">Nom<span class="req">*</span></label>
                            <input type="text" name="nom" id="nom" required class="md-input" />
                        </div>
                    </div>
                </div>
                <div class="uk-grid" data-uk-grid-margin>
                    <div class="uk-width-medium-1-1">
                        <div class="parsley-row">
                            <label for="prenom">Prénom<span class="req">*</span></label>
                            <input type="text" id="prenom" name="prenom" class="md-input">
                        </div>
                    </div>
                </div>
                <div class="uk-grid" data-uk-grid-margin>
                    <div class="uk-width-medium-1-1">
                        <div class="parsley-row">
                            <label for="nbPlace">Nombre de place<span class="req">*</span></label>
                            <select name="nbplace" id="nbPlace" class="md-input">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="uk-width-medium-1-1">
                    <div class="parsley-row">
                        {% if concerts is not empty %}
                            <select name="concert" id="concert" class="md-input">
                                <option value="">Selectionnez un concert disponible</option>
                                {% for concert in concerts %}
                                    <option value="{{ concert.id }}">{{ concert.intitule }}</option>
                                {% endfor %}
                            </select>
                        {% else %}
                            <span> <i class="uk-icon-smile-o"></i> Aucun concert en cours </span>
                        {% endif %}
                    </div>
                </div>
                <div class="uk-modal-footer">
                    <a href="#" class="md-icon-btn"><i class="md-icon uk-icon-save"></i></a>
                    <button type="submit" class="sendBtn uk-float-right md-btn md-btn-flat md-btn-flat-primary">AJOUTER</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
{% block scripts %}
    <script src="{{ asset("bundles/admin/assets/js/custom/dropify/dist/js/dropify.min.js") }}"></script>
    <script src="{{ asset("bundles/admin/assets/js/pages/forms_file_input.min.js") }}"></script>
    <script src="{{ asset("bundles/admin/bower_components/ckeditor/ckeditor.js") }}"></script>
    <script src="{{ asset("bundles/admin/bower_components/ckeditor/adapters/jquery.js") }}"></script>
    <script src="{{ asset("bundles/admin/assets/js/concert_reservation.js") }}"></script>
{% endblock %}