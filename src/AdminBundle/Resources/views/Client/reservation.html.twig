{% extends "AdminBundle::layout.html.twig" %}
{% block title %} Reservations {% endblock %}
{% block style %}
    <link rel="stylesheet" href="{{ asset("bundles/admin/assets/skins/dropify/css/dropify.css")}}"/>
{% endblock %}
{% block body %}
    <div class="md-card uk-margin-medium-bottom">
        <div class="md-card-toolbar">
            <div class="md-card-toolbar-actions">
                <i class="md-icon material-icons md-card-fullscreen-activate">&#xE5D0;</i>
                <i class="md-icon material-icons md-card-toggle">&#xE316;</i>
                <a href="{{ path('admin_client_reservation', {client: client.id}) }}"><i class="md-icon uk-icon-refresh"></i></a>
            </div>
            <h3 class="md-card-toolbar-heading-text">
                <a href="{{ path('admin_client') }}"><i class="md-icon uk-icon-arrow-left"></i></a>
                Réservations de {{ client.nom }} {{ client.prenom }}
                <span class="uk-badge uk-badge-warning">{{ nbReservations }}</span>
            </h3>
        </div>
        <div class="md-card-content">
            <table class="uk-table uk-table-nowrap table_check">
                <thead>
                <tr>
                    <th></th>
                    <th>Concert</th>
                    <th>Nombre de place</th>
                    <th>Date de reservation</th>
                    <th></th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for reservation in reservations %}
                    <tr>
                        <td><img style="max-height: 40px;" src="/uploads/thumbnails/{{ reservation.con.affiche }}" alt="{{ reservation.con.intitule }}"></td>
                        <td>{{ reservation.con.intitule }}</td>
                        <td>{{ reservation.nbplace }}</td>
                        <td>{{ reservation.date | date('d-m-y')}}</td>
                        <td><a class='deleteReservation' data-url="{{ path('admin_reservation_delete') }}" data-id="{{ reservation.id }}"><i class='uk-icon-trash uk-icon-medium uk-text-danger'></i></a></td>
                        <td> <a data-uk-tooltip="{pos:'top'}" title='Modifier' class='editReservation' data-id="{{ reservation.id }}" data-nbplace="{{ reservation.nbplace }}" data-intitule="{{ reservation.con.intitule }}" data-concert="{{ reservation.con.id }}"><i class="uk-icon-edit uk-icon-medium uk-text-warning"></i></a></td>
                    </tr>
                {% else %}
                    <tr><td colspan="6" class="uk-text-danger uk-text-center">Aucune réservation</td></tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="md-fab-wrapper">
        <a class="md-fab md-fab-accent md-fab-wave" id="addReservation" href="#" data-uk-modal="{center:true}">
            <i class="material-icons"></i>
        </a>
    </div>

    <div class="uk-modal" id="modalReservation">
        <div class="uk-modal-dialog" style="width: 75%;">
            <button class="uk-modal-close uk-close" type="button"></button>
            <form action="{{ path('admin_reservation_edit') }}" id="formReservation" method="post">
                <div class="uk-modal-header">
                    <h3 class="heading_b uk-margin-bottom titleForm">Ajoutez un nouvelle réservation</h3>
                    <div class="text-center" id="messageformSalle"></div>
                </div>
                <div class="uk-grid" data-uk-grid-margin>
                    <input type="hidden" id="id" name="id">
                    <input type="hidden" id="idclient" name="idclient" value="{{ client.id }}">
                    <input type="hidden" name="action" id="action">
                    <div class="uk-width-medium-1-1">
                        <div class="parsley-row">
                            <label for="nbPlace">Nombre de place<span class="req">*</span></label>
                            <select name="nbplace" id="nbPlace" class="md-input">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                            </select>
                        </div>
                    </div>
                    <div class="uk-width-medium-1-1">
                        <div class="parsley-row">
                            {% if concerts is not empty %}
                                <select name="concert" id="concert" class="md-input">
                                    <option value="">Selectionnez un concert disponible</option>
                                    {% for concert in concerts %}
                                    <option value="{{ concert.id }}">{{ concert.intitule }}</option>
                                    {% endfor %}
                                </select>
                            {% else %}
                                <span> <i class="uk-icon-smile-o"></i> Aucun concert en cours </span>
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="uk-modal-footer">
                    <a href="#" class="md-icon-btn"><i class="md-icon uk-icon-save"></i></a>
                    <button type="submit" class="sendBtn uk-float-right md-btn md-btn-flat md-btn-flat-primary">AJOUTER</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
{% block scripts %}
    <script src="{{ asset("bundles/admin/assets/js/custom/dropify/dist/js/dropify.min.js") }}"></script>
    <script src="{{ asset("bundles/admin/assets/js/pages/forms_file_input.min.js") }}"></script>
    <script src="{{ asset("bundles/admin/bower_components/ckeditor/ckeditor.js") }}"></script>
    <script src="{{ asset("bundles/admin/bower_components/ckeditor/adapters/jquery.js") }}"></script>
    <script src="{{ asset("bundles/admin/assets/js/reservation.js") }}"></script>
{% endblock %}