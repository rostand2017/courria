{% extends "AdminBundle::layout.html.twig" %}
{% block title %} Commandes {% endblock %}
{% block titleContent %} Commandes {% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-white">
                <div class="panel-heading">
                    <h5 class="panel-title">Commandes en cours</h5>
                    <div class="panel-control">
                        <a href="javascript:void(0);" data-toggle="tooltip" class="panel-collapse" data-original-title="Reduire/Agrandir">
                            <i class="icon-arrow-down fa-2x"></i>
                        </a>
                        <a href="" data-toggle="tooltip" class="panel-reload" data-original-title="Rafraichir">
                            <i class="icon-reload fa-2x"></i>
                        </a>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="row m-t-sm">
                        <div class="col-md-12">
                            <div class="table-responsive project-stats">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>Client</th>
                                            <th>email</th>
                                            <th></th>
                                            <th>#</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for user in users %}
                                            <tr>
                                                <td>{{ user.name }}</td>
                                                <td>{{ user.email }}</td>
                                                <td><a href="{{ path('admin_command_user', {name: user.name, user: user.id }) }}" class="btn btn-primary">Voir ses comandes</a></td>
                                            </tr>
                                        {% else %}
                                            <tr class="text-center text-info">
                                                <td colspan="3">Aucune commande en cours</td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block scripts %}
{% endblock %}