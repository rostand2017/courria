{% extends "AdminBundle::layout.html.twig" %}
{% block title %} Artistes {% endblock %}
{% block style %}
    <link rel="stylesheet" href="{{ asset("bundles/admin/assets/skins/dropify/css/dropify.css")}}"/>
{% endblock %}
{% block body %}
    <div class="md-card uk-margin-medium-bottom">
        <div class="md-card-toolbar">
            <div class="md-card-toolbar-actions">
                <i class="md-icon material-icons md-card-fullscreen-activate">&#xE5D0;</i>
                <i class="md-icon material-icons md-card-toggle">&#xE316;</i>
                <a href="{{ path('admin_artiste') }}"><i class="md-icon uk-icon-refresh"></i></a>
            </div>
            <h3 class="md-card-toolbar-heading-text">
                Liste des artistes
                <span class="uk-badge uk-badge-warning">{{ nbArtiste }}</span>
            </h3>
        </div>
        <div class="md-card-content">
            <div>
                <div class="uk-grid" data-uk-grid-margin="">
                    {% for artiste in artistes %}
                        <div class="uk-width-medium-1-3">
                            <div class="md-card md-card-hover">
                                <div class="md-card-content" style="padding: 0">
                                    <div class="md-card md-card-fullscreen-activate">
                                        <div class="md-card-fullscreen-hide">
                                            <img src="/uploads/thumbnails/{{ artiste.photo }}" style="width: 100%" alt="{{ artiste.nom }}">
                                            <div class="md-card-content">
                                                <strong>{{ artiste.nom }} {{ artiste.prenom }}</strong><br>
                                                <span class="uk-text-muted">{{ artiste.nationalite }}</span>
                                            </div>
                                        </div>
                                        <div class="md-card-fullscreen-content">
                                            <div class="uk-article">
                                                <img src="/uploads/thumbnails/{{ artiste.photo }}" style="width: 100%" alt="{{ artiste.nom }}">
                                                <h1 class="uk-article-title">{{ artiste.nom }}</h1>
                                                <p class="uk-article-meta">
                                                    Date de deroulement:  {{ artiste.prenom }}
                                                </p>
                                                <hr style="margin: 30px 0">
                                                {{ artiste.nationalite }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="md-fab-wrapper md-fab-in-card">
                                    <div class="md-fab md-fab-small md-fab-warning md-fab-sheet">
                                        <i class="material-icons"></i>
                                        <div class="md-fab-sheet-actions">
                                            <a data-id="{{ artiste.id }}" data-nom="{{ artiste.nom }}" data-prenom="{{ artiste.prenom }}"
                                               data-datenaissance="{{ artiste.datenaissance }}" data-nationalite="{{ artiste.nationalite }}"
                                               href="javascript:void(0)" class="editArtiste md-color-white"><i class="material-icons md-color-white"></i> Modifier</a>
                                            <a data-id="{{ artiste.id }}" data-url="{{ path('admin_artiste_delete') }}" href="javascript:void(0)" class="deleteArtiste md-color-white"><i class="material-icons md-color-white"></i> Supprimer</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="uk-width-medium-1-1 uk-text-danger uk-text-center">
                            Aucun artiste ajouté
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    <div class="md-fab-wrapper">
        <a class="md-fab md-fab-accent md-fab-wave" id="addArtiste" href="#" data-uk-modal="{center:true}">
            <i class="material-icons"></i>
        </a>
    </div>

    <div class="uk-modal" id="modalArtiste">
        <div class="uk-modal-dialog" style="width: 75%;">
            <button class="uk-modal-close uk-close" type="button"></button>
            <form action="{{ path('admin_artiste_edit') }}" id="formArtiste" method="post">
                <div class="uk-modal-header">
                    <h3 class="heading_b uk-margin-bottom titleForm">Ajoutez un nouvel artiste</h3>
                    <div class="text-center" id="messageformSalle"></div>
                </div>
                <div class="uk-grid" data-uk-grid-margin>
                    <input type="hidden" id="id" name="id">
                    <input type="hidden" name="action" id="action">
                </div>
                <div class="uk-grid" data-uk-grid-margin>
                    <div class="uk-width-medium-1-2">
                        <div class="parsley-row">
                            <label for="nom">Nom de l'artiste<span class="req">*</span></label>
                            <input type="text" id="nom" name="nom" class="md-input">
                        </div>
                    </div>
                    <div class="uk-width-medium-1-2">
                        <div class="parsley-row">
                            <label for="prenom">Prénom<span class="req">*</span></label>
                            <input type="text" id="prenom" name="prenom"  class="md-input">
                        </div>
                    </div>
                </div>
                <div class="uk-grid" data-uk-grid-margin>
                    <div class="uk-width-medium-1-1">
                        <div class="parsley-row">
                            <label for="nationalite">Nationalité<span class="req">*</span></label>
                            <input type="text" name="nationalite" id="nationalite" class="md-input">
                        </div>
                    </div>
                </div>
                <div class="uk-grid" data-uk-grid-margin>
                    <div class="uk-width-medium-1-1">
                        <div class="parsley-row">
                            <input type="date" placeholder="Date de naissance" name="dateNaissance" id="dateNaissance" class="md-input">
                        </div>
                    </div>
                </div>
                <div id="pictureContent">
                    <div class="uk-grid" data-uk-grid-margin>
                        <div class="uk-width-medium-1-1">
                            <div class="">
                                <div class="" style="padding-top: 15px;" >
                                    <h3 class="heading_a uk-margin-small-bottom">
                                        Photo de l'artiste
                                    </h3>
                                    <input type="file" id="input-file-a" accept="image/*" name="photo" class="dropify" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="uk-modal-footer">
                    <a href="#" class="md-icon-btn"><i class="md-icon uk-icon-save"></i></a>
                    <button type="submit" class="sendBtn uk-float-right md-btn md-btn-flat md-btn-flat-primary">AJOUTER</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
{% block scripts %}
    <script src="{{ asset("bundles/admin/assets/js/custom/dropify/dist/js/dropify.min.js") }}"></script>
    <script src="{{ asset("bundles/admin/assets/js/pages/forms_file_input.min.js") }}"></script>
    <script src="{{ asset("bundles/admin/bower_components/ckeditor/ckeditor.js") }}"></script>
    <script src="{{ asset("bundles/admin/bower_components/ckeditor/adapters/jquery.js") }}"></script>
    <script src="{{ asset("bundles/admin/assets/js/artiste.js") }}"></script>
{% endblock %}