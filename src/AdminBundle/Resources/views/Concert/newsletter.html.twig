{% extends "AdminBundle::layout.html.twig" %}
{% block title %} NewsLetter {% endblock %}
{% block titleContent %} NewsLetter {% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-white">
                <div class="panel-heading">
                    <h5 class="panel-title"><i class="fa fa-user-circle"></i>Abonnés</h5>
                    <div class="panel-control">
                        <a href="javascript:void(0);" data-toggle="tooltip" class="new" data-original-title="Nouveau slide">
                            <i class="icon-plus text-success fa-2x"></i>
                        </a>
                        <a href="javascript:void(0);" data-toggle="tooltip" class="panel-collapse" data-original-title="Reduire/Agrandir">
                            <i class="icon-arrow-down fa-2x"></i>
                        </a>
                        <a href="" data-toggle="tooltip" class="panel-reload" data-original-title="Rafraichir">
                            <i class="icon-reload fa-2x"></i>
                        </a>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="row m-t-sm">
                        <div class="col-md-12">
                            <div class="table-responsive project-stats">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>Email</th>
                                            <th>date de souscription</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for news in newsletter %}
                                            <tr>
                                                <td>{{ news.email }}</td>
                                                <td>{{ news.createdAt | date('d-m-y') }}</td>
                                            </tr>
                                        {% else %}
                                            <tr class="text-center text-info">
                                                <td colspan="2">Aucune abonné au newsletter.</td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade newModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                    <h2 class="modal-title titleForm">DIFFUSER UNE NEWS</h2>
                </div>
                <form action="{{ path("admin_newsletter_sent") }}" id="newForm" method="post">
                    <div class="modal-body">
                        <input  id="idElement" name="id" value="" type="hidden">
                        <div class="row">
                            <div class="col-md-12 form-group">
                                <textarea name="message" id="message" class="form-control" rows="4" placeholder="Message à diffuser"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="newBtn btn btn-success">DIFFUSER</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Annuler</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
{% block scripts %}
    <script src="{{ asset("bundles/admin/assets/js/newsletter.js") }}"></script>
{% endblock %}