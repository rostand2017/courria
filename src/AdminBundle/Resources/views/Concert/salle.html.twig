{% extends "AdminBundle::layout.html.twig" %}
{% block title %} Salles de concert {% endblock %}
{% block style %}
{% endblock %}
{% block body %}
    <div class="md-card uk-margin-medium-bottom">
        <div class="md-card-toolbar">
            <div class="md-card-toolbar-actions">
                <i class="md-icon material-icons md-card-fullscreen-activate">&#xE5D0;</i>
                <i class="md-icon material-icons md-card-toggle">&#xE316;</i>
                <a href="{{ path('admin_salle') }}"><i class="md-icon uk-icon-refresh"></i></a>
            </div>
            <h3 class="md-card-toolbar-heading-text">
                Liste des salles
                <span class="uk-badge uk-badge-warning">{{ nbSalle}}</span>
            </h3>
        </div>
        <div class="md-card-content">
            <div>
                <table class="uk-table uk-table-nowrap table_check">
                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Lieu</th>
                            <th>Capacité</th>
                            <th>date de création</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                       {% for salle in salles %}
                           <tr>
                               <td>{{ salle.nom }}</td>
                               <td>{{ salle.lieu }}</td>
                               <td>{{ salle.capacite }}</td>
                               <td>{{ salle.createdat | date('d-m-y')}}</td>
                               <td><a class='deleteSalle' data-url="{{ path('admin_salle_delete') }}" data-id="{{ salle.id }}"><i class='uk-icon-trash uk-icon-medium uk-text-danger'></i></a></td>
                               <td> <a data-uk-tooltip="{pos:'top'}" title='Modifier les infos de cette salle' class='editSalle' data-id="{{ salle.id }}" data-lieu="{{ salle.lieu }}" data-nom="{{ salle.nom }}" data-capacite="{{ salle.capacite }}" data-url="{{ path("admin_salle_edit") }}"><i class='uk-icon-edit uk-icon-medium uk-text-warning'></i></a>
                               </td>
                           </tr>
                       {% else %}
                           <tr><td colspan="6" class="uk-text-danger uk-text-center">Aucune salle ajoutée</td></tr>
                       {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>
    </div>
    <div class="md-fab-wrapper">
        <a class="md-fab md-fab-accent md-fab-wave" id="addSalle" href="#" data-uk-modal="{center:true}">
            <i class="material-icons"></i>
        </a>
    </div>
    <div class="uk-modal" id="modalSalle">
        <div class="uk-modal-dialog" style="width: 75%;">
            <button class="uk-modal-close uk-close" type="button"></button>
            <form action="{{ path('admin_salle_edit') }}" id="formSalle" method="post">
                <div class="uk-modal-header">
                    <h3 class="heading_b uk-margin-bottom titleForm">Ajouté une nouvelle salle</h3>
                    <div class="text-center" id="messageformSalle"></div>
                </div>
                <div class="uk-grid" data-uk-grid-margin>
                    <input type="hidden" id="id" name="id">
                    <input type="hidden" name="action" id="action">
                    <div class="uk-width-medium-1-1">
                        <div class="parsley-row">
                            <label for="nom">Nom de la salle<span class="req">*</span></label>
                            <input type="text" name="nom" id="nom" required class="md-input" />
                        </div>
                    </div>
                </div>
                <div class="uk-grid" data-uk-grid-margin>
                    <div class="uk-width-medium-1-2">
                        <div class="parsley-row">
                            <label for="lieu">Lieu<span class="req">*</span></label>
                            <input type="text" id="lieu" name="lieu" class="md-input">
                        </div>
                    </div>
                    <div class="uk-width-medium-1-2">
                        <div class="parsley-row">
                            <label for="capacite">Capacité<span class="req">*</span></label>
                            <input type="number" id="capacite" name="capacite" min="100" class="md-input">
                        </div>
                    </div>
                </div>
                <div class="uk-modal-footer">
                    <button type="submit" class="sendBtn uk-float-right md-btn md-btn-flat md-btn-flat-primary">AJOUTER</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}

{% block scripts %}
    <script src="{{ asset("bundles/admin/assets/js/custom/dropify/dist/js/dropify.min.js") }}"></script>
    <script src="{{ asset("bundles/admin/assets/js/pages/forms_file_input.min.js") }}"></script>
    <script src="{{ asset("bundles/admin/bower_components/ckeditor/ckeditor.js") }}"></script>
    <script src="{{ asset("bundles/admin/bower_components/ckeditor/adapters/jquery.js") }}"></script>
    <script src="{{ asset("bundles/admin/assets/js/salle.js") }}"></script>
{% endblock %}