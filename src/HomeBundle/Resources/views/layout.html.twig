<!DOCTYPE html>
<html lang="fr">
    <head>
        <title>{% block title %}{% endblock %}</title>
        <meta charset="UTF-8">
        <meta name="description" content="Agence d'influenceur">
        <meta name="keywords" content="influenceur, agence, marketing">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!-- Favicon -->
        <link href="{{ asset('bundles/home/img/favicon.ico') }}" rel="shortcut icon">

        <!-- Google Font -->
        <link href="https://fonts.googleapis.com/css?family=Montserrat:400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

        <!-- Stylesheets -->
        <link rel="stylesheet" href="{{ asset('bundles/home/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('bundles/home/css/font-awesome.min.css') }}">
        <link rel="stylesheet" href="{{ asset('bundles/home/css/owl.carousel.min.css') }}">
        <link rel="stylesheet" href="{{ asset('bundles/home/css/flaticon.css') }}">
        <link rel="stylesheet" href="{{ asset('bundles/home/css/slicknav.min.css') }}">

        <!-- Main Stylesheets -->
        <link rel="stylesheet" href="{{ asset('bundles/home/css/style.css') }}">


        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->

    </head>
    <body>
        <!-- Page Preloder -->
        <div id="preloder">
            <div class="loader"></div>
        </div>

        <!--header-->
        <header class="header-section">
            <a class="site-logo">
                <img src="{{ asset('bundles/home/img/logo.png') }}" alt="">
            </a>
            <div class="header-socil-links">
                <a href=""><i class="fa fa-facebook"></i></a>
                <a href=""><i class="fa fa-instagram"></i></a>
                <a href=""><i class="fa fa-twitter"></i></a>
                {% if app.session.get('user') %}
                    <a class="dropdown" href="{{ path('home_profile') }}">
                        <i class="fa fa-2x fa-user-circle"></i> {{ app.session.get('user').name }}
                    </a>
                    <a href="{{ path('home_logout') }}">Déconnexion</a>
                {% else %}
                    <a class="btn btn-secondary" href="{{ path('home_login') }}">Se connecter</a>
                {% endif %}
            </div>
            <ul class="main-menu">
                <li class="active"><a href="{{ path('home_homepage') }}">Accueil</a></li>
                <li><a href="{{ path('home_influencer') }}">Influenceurs</a></li>
                <li><a href="{{ path('home_about') }}">A propos</a></li>
                <li><a href="{{ path('home_contact') }}">Contact</a></li>
            </ul>
    </header>

        {% block body %}{% endblock %}

        <div class="gallery-section">
            <div class="gallery-slider owl-carousel">
                {% for photo in photos %}
                    <div class="gallery-item " style="max-height: 200px">
                        <img src="/uploads/thumbnails/{{ photo.link }}" alt="">
                    </div>
                {% endfor %}
            </div>
        </div>

        <footer class="footer-section">
            <div class="contaienr text-center">
                <p><img src="{{ asset('bundles/home/img/footer-icon.png') }}" alt="">
                    Copyright ©<script>document.write(new Date().getFullYear());</script> All rights reserved | Nop Agency <i class="fa fa-heart-o" aria-hidden="true"></i> <a href="mailto:contact@nopagency.com">contact@nopagency.com</a>
                </p>
            </div>
        </footer>

        <script src="{{ asset('bundles/home/js/jquery-3.2.1.min.js') }}"></script>
        <script src="{{ asset('bundles/home/js/popper.min.js') }}"></script>
        <script src="{{ asset('bundles/home/js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('bundles/home/js/jquery.slicknav.min.js') }}"></script>
        <script src="{{ asset('bundles/home/js/owl.carousel.min.js') }}"></script>
        <script src="{{ asset('bundles/home/js/circle-progress.min.js') }}"></script>
        <script src="{{ asset('bundles/home/js/main.js') }}"></script>
        <script src="{{ asset('bundles/home/js/sweetalert.min.js') }}"></script>
        <script>
            //$('popper')
        </script>
        {% block script %}{% endblock %}
    </body>
</html>