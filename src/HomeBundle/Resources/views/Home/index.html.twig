                                    <form action="{{ path('home_reservation') }}" method="get" style="margin-top: 10px">
                                        <button type="submit" style="color: white">Réservez votre place</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </li>
                {% else %}
