                <div id="portfolio-wrapper">
                    <div class="col portfolio-item">
                        <div class="item-wrap">
                            <a href="#" data-reveal-id="modal-0{{ i }}"><img src="/uploads/images/{{ concert.affiche }}" alt="{{ concert.intitule }}"/></a>
                            <div class="portfolio-item-meta">
                                <h5><a href="#">{{ concert.intitule }}</a></h5>
                            </div>
                        </div>
                    </div>
                </div> <!-- Portfolio Wrapper End -->
            </div> <!-- End Row -->
            <div id="modal-0{{ i }}" class="reveal-modal">
                <img class="scale-with-grid" src="/uploads/images/{{ concert.affiche }}" alt="{{ concert.intitule }}" />
                <div class="description-box">
                    <h4>{{ concert.intitule }}</h4>
                    <p>{{ concert.description }}</p>
                    <span class="categories"><i class="icon-tag"></i>{{ concert.date | date('d/m/y') }} à {{ concert.heure | date('h:i') }}</span>
                </div>
                <div class="link-box">
                    <a class="close-reveal-modal">Close</a>
                </div>

            </div><!-- modal-01 End -->
            {% set i = i+1 %}
        {% else %}
