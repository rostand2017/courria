        // update the total when number of product change
        $('.number_product').on('change', function (e) {
            total = parseInt( $(this).data('price')) * parseInt($(this).val());
            //$('#sub_total').text( parseInt($('#sub_total').text()) - ( parseInt($(this).data('price')) * (parseInt($(this).val()) -1) ) + ( parseInt($(this).data('price')) * parseInt($(this).val()) )  );
            $(this).parent().parent().next().text(total);

            var subTotal = 0;
            for(var i=0; i<$('.total_item').length; i++){
                subTotal += parseInt($($('.total_item')[i]).text());
            }
            $('#sub_total').text(subTotal);
            $('#shipping').trigger('change');
        });
        $('.btn-num-product-up').on('click',function () {
            $('.number_product').trigger('change');
        });
        $('.btn-num-product-down').on('click',function () {
            $('.number_product').trigger('change');
        });

        // update du total final au changement de localité
        $('#shipping').on('change', function () {
            total = parseInt($('#sub_total').text()) + parseInt($(this).val());
            $('#total').text(total+" XAF");
        })

        $('#pay').on('click', function (e) {
            e.preventDefault();
            id = $('#shipping').find(':selected').data('id');
            url = $(this).data("url");
            $.ajax({
                type: "post",
                url: url,
                data: "id="+id,
                dataType: "json",
                beforeSend: function () {
                    $(this).prop('disabled', true);
                },
                success: function (data) {
                    if(data.status == 0){
                        window.location.assign(data.mes);
                    }else
                        swal("Avertissement", data.mes);
                },
                complete: function () {
                    $(this).prop('disabled', false);
                },
                error: function () {
                    swal("Erreur", "Une erreur est survenue");
                }
            })
        })
    </script>
