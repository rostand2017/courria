{% extends "HomeBundle::layout.html.twig" %}
{% block title %} Mes commandes {% endblock %}
{% block body %}

    <!--  breadcrumb  -->
    <div class="container">
        <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
            <a href="{{ path('home_homepage') }}" class="stext-109 cl8 hov-cl1 trans-04">
                Accueil
                <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
            </a>

            <span class="stext-109 cl4">
				Panier
			</span>
        </div>
    </div>
    <!-- Shoping Cart -->
    <form class="bg0 p-t-75 p-b-85">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
                    <div class="m-l-25 m-r--38 m-lr-0-xl">
                        <div class="wrap-table-shopping-cart">
                            <table class="table-shopping-cart">
                                <tr class="table_head">
                                    <th class="column-1">Vêtement</th>
                                    <th class="column-2"></th>
                                    <th class="column-3">Prix</th>
                                    <th class="column-4">Quantité</th>
                                    <th class="column-5">Total</th>
                                    <th></th>
                                </tr>

                                {% set subtotal = 0 %}
                                {% for command in commands %}
                                    {% set subtotal = subtotal + command.number * command.product.price %}
                                    <tr class="table_row command_row">
                                    <td class="column-1">
                                        <div class="how-itemcart1 remove-cart" data-url="{{ path('home_cart_remove', {command: command.id}) }}">
                                            <img src="{{ asset('/uploads/thumbnails/'~command.product.images[0].thumbnail) }}" alt="IMG">
                                        </div>
                                    </td>
                                    <td class="column-2">{{ command.product.name }}({{ command.size }})</td>
                                    <td class="column-3">{{ command.product.price }} XAF</td>
                                    <td class="column-4">
                                        <div class="wrap-num-product flex-w m-l-auto m-r-0">
                                            <div class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m">
                                                <i class="fs-16 zmdi zmdi-minus"></i>
                                            </div>

                                            <input class="mtext-104 cl3 txt-center num-product number_product" type="number" data-price="{{ command.product.price }}" data-id="{{ command.id }}" name="num-product1" value="{{ command.number }}">

                                            <div class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m">
                                                <i class="fs-16 zmdi zmdi-plus"></i>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="column-5 total_item">{{ command.number * command.product.price }}</td>
                                    <td><span class="sstatus">statut</span></td>
                                </tr>
                                {% else %}
                                    <tr class="text-center">
                                        <td colspan="5"><i class="fa fa-shopping-cart"></i> Panier vide</td>
                                    </tr>
                                {% endfor %}
                            </table>
                        </div>
                        <div class="flex-w flex-sb-m bor15 p-t-18 p-b-15 p-lr-40 p-lr-15-sm">

                            <div class="flex-c-m stext-101 cl2 size-119 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-10"  data-url="{{ path('home_cart_update') }}" id="updateBtn">
                                Mettre à jour mon panier
                            </div>
                        </div>
                    </div>
                </div>

                {% if commands is not empty %}
                    <div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
                    <div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">
                        <h4 class="mtext-109 cl2 p-b-30">
                            Total des courses
                        </h4>

                        <div class="flex-w flex-t bor12 p-b-13">
                            <div class="size-208">
								<span class="stext-110 cl2">
									Sous total:
								</span>
                            </div>

                            <div class="size-209">
								<span class="mtext-110 cl2" id="sub_total">
									{{ subtotal }} XAF
								</span>
                            </div>
                        </div>

                        <div class="flex-w flex-t bor12 p-t-15 p-b-30">
                            <div class="size-208 w-full-ssm">
								<span class="stext-110 cl2">
									Expédition
								</span>
                            </div>

                            <div class="size-209 p-r-18 p-r-0-sm w-full-ssm">
                                <p class="stext-111 cl6 p-t-2">
                                    Selectionner le pays et la ville dans laquelle vous souhaitez qu'on vous livre
                                </p>

                                <div class="p-t-15">
									<span class="stext-112 cl8">
										Pays/Ville
									</span>

                                    <div class="rs1-select2 rs2-select2 bor8 bg0 m-b-12 m-t-9">
                                        <select class="js-select2" name="shipping" id="shipping">
                                            <option value="0" data-price="0">Selectionner le pays/ville...</option>
                                            {% for shipping in shippings %}
                                                <option value="{{ shipping.price }}" data-id="{{ shipping.id }}">{{ shipping.country }}, {{ shipping.region }},{{ shipping.town }}</option>
                                            {% endfor %}
                                        </select>
                                        <div class="dropDownSelect2"></div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="flex-w flex-t p-t-27 p-b-33">
                            <div class="size-208">
								<span class="mtext-101 cl2">
									Total:
								</span>
                            </div>

                            <div class="size-209 p-t-1">
								<span class="mtext-110 cl2" id="total">
									{{ subtotal }} XAF
								</span>
                            </div>
                        </div>

                        <button class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer" id="pay" data-url="{{ path('home_cart_verify') }}">
                            Procéder au paiement
                        </button>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
    </form>
{% endblock %}
{% block script %}
    <script>
        $(function () {
            $(".remove-cart").on("click", function (e) {
                url = $(this).data("url");
                elt = $(this)
                $.ajax({
                    type: "post",
                    url: url,
                    dataType: "json",
                    beforeSend: function () {
                        //
                    },
                    success: function (data) {
                        if(data.status == 0){
                            swal("success", data.mes);
                            elt.parent().parent().remove();
                        }else
                            swal("Avertissement", data.mes);
                    },
                    error: function () {
                        swal("Erreur", "Une erreur est survenue");
                    }
                })
            });

            $("#updateBtn").on("click", function () {
                url = $(this).data("url");
                text = $(this).text();
                $(this).text("chargement...");
                var index=0, length = {{ commands | length }};
                t = setInterval(function () {
                    currentElement = $( $('.number_product')[index] );
                    sstatus = $( $('.sstatus')[index] );
                    //console.log(sstatus);
                    if(index < length){
                        $.ajax({
                            type: "post",
                            url: url,
                            data: "number="+currentElement.val()+"&id="+currentElement.data('id'),
                            dataType: "json",
                            beforeSend: function () {
                                sstatus.text("mise à jour...");
                            },
                            success: function (data) {
                                if(data.status == 0){
                                    //swal("success", data.mes);
                                    console.log(sstatus);
                                    sstatus.text(data.mes);
                                }else {
                                    sstatus.text(data.mes);
                                    //swal("Avertissement", data.mes);
                                }
                            },
                            complete: function () {
                                if(index=={{ commands | length -1 }})
                                    $("#updateBtn").text(text);
                                index++;
                            },
                            error: function () {
                                swal("Erreur", "Une erreur est survenue");
                            }
                        })

                    }else{
                        clearInterval(t);
                    }
                }, 1000);

