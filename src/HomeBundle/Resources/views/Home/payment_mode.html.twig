{% extends "HomeBundle::layout.html.twig" %}
{% block title %} Moyen de paiement {% endblock %}
{% block body %}

    <!--  breadcrumb  -->
    <div class="container">
        <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
            <a href="{{ path('home_cart') }}" class="stext-109 cl8 hov-cl1 trans-04">
                Panier
                <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
            </a>

            <span class="stext-109 cl4">
				Paiement
			</span>
        </div>
    </div>
    <div class="jumbotron text-center" >
        <h3>Choisir le mode paiement. <i class="fa fa-money"></i> </h3>
        <form action="" method="post">
            <div class="form-group">
                <div class="form-check-label form-control">
                    <input id="mastercard" type="radio" name="payment">
                    <i class="fa fa-2x fa-cc-mastercard"></i>
                    <label for="mastercard">Mastercard</label>
                </div>
                <div class="form-check-label form-control">
                    <input id="paypal" type="radio" name="payment">
                    <i class="fa fa-2x fa-paypal"></i>
                    <label for="paypal">Paypal</label>
                </div>
                <div class="form-check-label form-control">
                    <input id="visa" type="radio" name="payment">
                    <i class="fa fa-2x fa-cc-visa"></i>
                    <label for="visa">Visa</label>
                </div>
            </div>
            <div class="form-group">
                <button class="btn btn-secondary">Continuer <i class="fa fa-chevron-right"></i></button>
            </div>
        </form>
    </div>
{% endblock %}
{% block script %}
{% endblock %}
